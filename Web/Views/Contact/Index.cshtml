@using Core.Dtos
@using Web.Extensions.HtmlHelpers
@{
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@Html.TableFor(typeof(ContactDto), "contactTable")

@section scripts{
    <script>
        $(document).ready(function() {
            $('#contactTable').DataTable({
                processing: true,
                serverSide: false,
                ajax: {
                    url: '@Html.GetWebServerUri()' + 'api/contacts',
                    type: 'GET',
                    dataSrc: '',
                    dataType: 'json',
                    contentType: 'application/json',
                    headers: {
                        'Access-Control-Allow-Origin' : '@Html.GetWebServerUri()'
                    }
                },
                columns: [
                    {
                        data: 'name'
                    },
                    {
                        data: 'firstName'
                    },
                    {
                        data: 'lastName'
                    },
                    {
                        data: 'email'
                    },
                    {
                        data: 'phoneNumber'
                    },
                    {
                        data: 'partner.name'
                    }
                ]
            });
        });
    </script>
}
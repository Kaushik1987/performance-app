<div class="panel panel-default">
    <div class="panel-heading">
        <span class="fa fa-gears" style="margin-right: 5px;"></span>Quick Selection
    </div>
    <div class="panel-body">
        <ul class="nav nav-pills nav-justified">
            <li class="active"><a id="selection-js-select-partner"><span class="fa fa-users" style="margin-right: 5px;"></span>By Partners</a></li>
            <li><a id="selection-js-select-portfolio"><span class="fa fa-book" style="margin-right: 5px;"></span>By Portfolios</a></li>
            <li><a id="selection-js-select-container"><span class="fa fa-folder" style="margin-right: 5px;"></span>By Containers</a></li>
        </ul>
        <div id="selection-by-partner" class="form-horizontal" style="padding: 30px;">
            <div class="form-group">
                <label for="partnerName">Partner Name</label>
                <input type="text" class="form-control" id="partnerName" />
            </div>
            <div class="form-group">
                <label for="partnerNumber">Partner Number</label>
                <input type="text" class="form-control" id="partnerNumber" />
            </div>
        </div>

        <div id="selection-by-portfolio" class="form-horizontal" style="padding: 30px; display: none;">
            <div class="form-group">
                <label for="portfolioName">Portfolio Name</label>
                <input type="text" class="form-control" id="portfolioName" />
            </div>
            <div class="form-group">
                <label for="portfolioNumber">Portfolio Number</label>
                <input type="text" class="form-control" id="portfolioNumber" />
            </div>
        </div>

        <div id="selection-by-container" class="form-horizontal" style="padding: 30px; display: none;">
            <div class="form-group">
                <label for="containerName">Container Name</label>
                <input type="text" class="form-control" id="containerName" />
            </div>
            <div class="form-group">
                <label for="containerNumber">Container Number</label>
                <input type="text" class="form-control" id="containerNumber" />
            </div>
        </div>
        <button id="selection-search-button" type="button" class="btn btn-primary pull-right" style="margin: 20px;">Search</button>
    </div>
</div>
<div class="panel panel-primary">
    <div class="panel-heading">
        <span class="fa fa-gears" style="margin-right: 5px;"></span>Quick Selection
    </div>
    <div class="panel-body">
        <ul class="nav nav-pills nav-justified">
            <li class="active"><a id="selection-js-select-partner"><span class="fa fa-users" style="margin-right: 5px;"></span>By Partners</a></li>
            <li><a id="selection-js-select-portfolio"><span class="fa fa-book" style="margin-right: 5px;"></span>By Portfolios</a></li>
            <li><a id="selection-js-select-container"><span class="fa fa-folder" style="margin-right: 5px;"></span>By Containers</a></li>
        </ul>
        <div id="selection-by-partner" class="form-horizontal" style="padding: 30px;">
            <div class="form-group col-xs-8">
                <label class="label label-primary" for="selection-partnername">Partner</label>
                <input type="text" class="form-control" id="selection-partnername" />
            </div>
            <div class="form-group col-xs-5 pull-right">
                <select class="form-control" style="margin-top: 20px;">
                    <option value="Name">By Name</option>
                    <option value="Number">By Number</option>
                    <option value="Contact">By Contact</option>
                </select>
            </div>
        </div>

        <div id="selection-by-portfolio" class="form-horizontal" style="padding: 30px; display: none;">
            <div class="form-group col-xs-8">
                <label class="label label-primary" for="selection-portfolioname">Portfolio</label>
                <input type="text" class="form-control" id="selection-portfolioname" />
            </div>
            <div class="form-group col-xs-5 pull-right">
                <select class="form-control" style="margin-top: 20px;">
                    <option value="Name">By Name</option>
                    <option value="Number">By Number</option>
                    <option value="Partner">By Partner</option>
                </select>                
            </div>
        </div>

        <div id="selection-by-container" class="form-horizontal" style="padding: 30px; display: none;">
            <div class="form-group col-xs-12 pull-right">
                <label class="label label-primary" for="selection-containers">Containers</label>
                <select id="selection-containers" class="form-control" style="margin-top: 20px;" multiple="multiple">
                    <option value="container-container-1">> 3M$ AUM</option>
                    <option value="container-container-2">> Benchmark RoI</option>
                    <option value="container-container-3">< Benchmark RoI</option>
                </select>
            </div>
        </div>
        <p class="form-horizontal" style="padding: 30px;">
            <button id="selection-search-button" type="button" class="btn btn-primary pull-right" style="margin-top: 15px;">Search</button>            
        </p>
    </div>
</div>
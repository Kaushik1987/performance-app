<div id="selectionPanel" class="panel panel-default">
    <div class="panel-heading">
        <span class="fa fa-gears" style="margin-right: 5px;"></span>Quick Selection
    </div>
    <div class="panel-body" style="height: 400px">
        <ul class="nav nav-pills nav-justified">
            <li class="active"><a id="js-select-partner"><span class="fa fa-users" style="margin-right: 5px;"></span>By Partners</a></li>
            <li><a id="js-select-portfolio"><span class="fa fa-book" style="margin-right: 5px;"></span>By Portfolios</a></li>
            <li><a id="js-select-container"><span class="fa fa-folder" style="margin-right: 5px;"></span>By Containers</a></li>
        </ul>
        <div id="byPartner" class="form-horizontal" style="padding: 30px;">
            <div class="form-group">
                <label for="partnerName">Partner Name</label>
                <input type="text" class="form-control" id="partnerName" />
            </div>
            <div class="form-group">
                <label for="partnerNumber">Partner Number</label>
                <input type="text" class="form-control" id="partnerNumber" />
            </div>
            <button type="button" class="btn btn-primary pull-right">Search</button>
        </div>

        <div id="byPortfolio" class="form-horizontal" style="padding: 30px; display: none;">
            <div class="form-group">
                <label for="portfolioName">Portfolio Name</label>
                <input type="text" class="form-control" id="portfolioName" />
            </div>
            <div class="form-group">
                <label for="portfolioNumber">Portfolio Number</label>
                <input type="text" class="form-control" id="portfolioNumber" />
            </div>
            <button type="button" class="btn btn-primary pull-right">Search</button>
        </div>

        <div id="byContainer" class="form-horizontal" style="padding: 30px; display: none;">
            <div class="form-group">
                <label for="containerName">Container Name</label>
                <input type="text" class="form-control" id="containerName" />
            </div>
            <div class="form-group">
                <label for="containerNumber">Container Number</label>
                <input type="text" class="form-control" id="containerNumber" />
            </div>
            <button type="button" class="btn btn-primary pull-right">Search</button>
        </div>
    </div>
</div>
@using Web.Extensions.HtmlHelperExtensions
<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width" />
    <title>@ViewBag.Title</title>
    @Styles.Render("~/bundles/vendor/styles")
    @Styles.Render("~/bundles/app/styles")
    @Scripts.Render("~/bundles/vendor/modernizr")
</head>
<body>
    @Html.GenerateRibbon()
<div id="siteBody">
    <div class="row">
        <div class="col-md-3" style="padding-left: 40px;">
            @RenderPage("Selection.cshtml")
        </div>
        <div id="primaryRightPanel" class="col-md-9" style="padding-right: 40px;">
            @RenderBody()
        </div>
    </div>    
</div>


@Scripts.Render("~/bundles/vendor/lib")
@Scripts.Render("~/bundles/app/components")
@Scripts.Render("~/bundles/app")
@Scripts.Render("~/bundles/app/services")
@Scripts.Render("~/bundles/app/controllers")

@RenderSection("scripts", false)
    
<script>
    $(document).ready(function () {
        selectionController.init();
        navbarController.init();
    });
</script>

</body>
</html>